        </arguments>
    </virtualType>

    <virtualType name="AppearanceSourceButtons" type="Magento\PageBuilder\Model\Source\VisualSelect">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
            <argument name="optionsData" xsi:type="array">
                <item name="2" xsi:type="array">
                    <item name="value" xsi:type="string">sticky</item>
                    <item name="title" xsi:type="string" translate="true">Sticky</item>
                    <item name="icon" xsi:type="string">Magento_PageBuilder::css/images/content-type/buttons/appearance/inline.svg</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Gene Driver Slider-->
    <virtualType name="AppearanceSourceGeneDriverSlider" type="Magento\PageBuilder\Model\Source\VisualSelect">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
            <argument name="optionsData" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="value" xsi:type="string">default</item>
