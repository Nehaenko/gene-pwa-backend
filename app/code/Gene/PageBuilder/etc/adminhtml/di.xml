                </item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Gene Customer Quote -->
    <virtualType name="AppearanceSourceCustomerQuote" type="Magento\PageBuilder\Model\Source\VisualSelect">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
