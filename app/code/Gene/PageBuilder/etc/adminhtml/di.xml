                </item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Gene Secondary Driver Slider-->
    <virtualType name="AppearanceSourceGeneSecondaryDriverSlider" type="Magento\PageBuilder\Model\Source\VisualSelect">
        <arguments>
            <argument name="optionsSize" xsi:type="string">large</argument>
            <argument name="optionsData" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="value" xsi:type="string">default</item>
