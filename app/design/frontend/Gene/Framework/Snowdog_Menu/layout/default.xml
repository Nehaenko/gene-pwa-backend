<?xml version="1.0"?>
<!--
/**
 * Default
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="store.menu">
            <block name="main.menu" class="Snowdog\Menu\Block\Menu" ifconfig="gene_snowdog_menu/general/enabled" ttl="86400">
                <arguments>
                    <argument name="menu" xsi:type="string">menu_main</argument>
                </arguments>
            </block>
            <block name="main.menu.mobile" class="Snowdog\Menu\Block\Menu" ifconfig="gene_snowdog_menu/general/enabled" ttl="86400">
                <arguments>
                    <argument name="menu" xsi:type="string">mobile_main_menu</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
